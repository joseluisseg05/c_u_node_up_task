mixin crearProyecto(proyecto = {})

    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}`, method="POST") 
        .campo  
            label(for='nombre') Nombre del Proyecto
            input(type="text", id="nombre", name="nombre", 
                placeholder="Nombre Proyecto" value=proyecto.nombre)
        .campo.enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Editar' : 'Guardar'}` class="boton")